{
  "plugins": [
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": true
      }
    ]
  ],
  "presets": [
    [
      "@babel/preset-react",
      {
        "runtime": "automatic",
        "importSource": "react"
      }
    ],
    [
      "@babel/preset-env",
      {
        "loose": true,
        "targets": {
          "chrome": "49",
          "ios": "10"
        }
      }
    ],
    "@babel/preset-typescript"
  ]
}